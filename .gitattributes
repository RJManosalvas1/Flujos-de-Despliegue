name: CI Spring Boot

on:
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3

    - name: Setup JDK 17
      uses: actions/setup-java@v3
      with:
        distribution: temurin
        java-version: 17

    - name: Build & Test
      run: mvn clean verify

    - name: Build Docker image
      run: docker build -t myapp:latest .
/mvnw text eol=lf
*.cmd text eol=crlf
